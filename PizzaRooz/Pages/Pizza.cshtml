@page
@model PizzaRooz.Pages.PizzaModel
@{
}

<div class="text-center">
	<div class="mainText" >
		<h1 class="display-4 text-capitalize text-black">Select from these pure Authentic Pizzas!</h1>
		<h4>Can't find the one you are looking for? No worries try our Pizza Builder now!!!</h4>
		<h4>No need to give your details we already know everything ;)</h4>
		<p class="small-text"><i>Only one pizza per order</i></p>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-100 row makeYourOwnDiv">
					<div class="col-4">
						<img src="~/Images/Pizzas/Create.png" class="w-100" />
					</div>
					<div class="col-8 align-items-center">
						<div class="align-middle makeYourOwnText">
							<h3 style="text-align:left">Create Your Own Pizza</h3>
							<p style="text-align:left">Make you own custom pizza with our Pizza Maker.</p>
							<a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPage">Try Now</a>
						</div>
					</div>
				</div>
			</div>
			@foreach(var pizza in Model.fakeDB)
				{
				var imagePath = "~/Images/Pizzas/" + pizza.ImageTitle + ".png";
				<div class="col-4 mb-5">
					<img src="@imagePath" class="w-100 " asp-append-version="true" />
					<a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">Want</a>
					<br />
				</div>
				}
		</div>
	</div>
</div>